{
  "name": "echo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "./scripts/dev-start.sh start",
    "dev:stop": "./scripts/dev-start.sh stop",
    "dev:restart": "./scripts/dev-start.sh restart",
    "dev:status": "./scripts/dev-start.sh status",
    "dev:logs": "./scripts/dev-start.sh logs",

    "types:generate": "./scripts/generate-types.sh all",
    "types:orm": "./scripts/generate-types.sh orm",
    "types:pydantic": "./scripts/generate-types.sh pydantic",
    "types:typescript": "./scripts/generate-types.sh typescript",
    "types:api": "./scripts/generate-types.sh api",

    "db:start": "cd packages/supabase && supabase start",
    "db:stop": "cd packages/supabase && supabase stop --no-backup",
    "db:reset": "cd packages/supabase && supabase db reset",
    "db:push": "cd packages/supabase && supabase db push",
    "db:generate-migration": "echo 'Run: cd packages/supabase && supabase migration new <migration_name>'",

    "codegen:db-orm-models": "bash apps/core/bin/codegen_models.sh",
    "codegen:db-pydantic-models": "bash apps/core/bin/codegen_pydantic_supabase.sh",
    "codegen:db-types": "./scripts/generate-types.sh typescript",
    "codegen:api-types": "./scripts/generate-types.sh api",
    "codegen:all": "./scripts/generate-types.sh all",

    "setup:python-env": "cd apps/core && uv venv && source .venv/bin/activate && uv pip install -e \".[dev]\" && echo 'Python env setup complete. Remember to activate it in new terminals: source apps/core/.venv/bin/activate' && cd ../..",
    "db:setup-local": "pnpm db:start && echo 'Waiting for Supabase to start...' && sleep 10 && pnpm db:push && pnpm types:generate",
    "db:refresh-local-schema": "pnpm db:push && pnpm types:generate",

    "dev:web": "pnpm --filter @echo/web dev",
    "dev:api": "bash apps/core/bin/dev.sh",
    "dev:legacy": "concurrently --kill-others-on-fail --names \"WEB,API\" -c \"bgBlue.bold,bgMagenta.bold\" \"pnpm dev:web\" \"pnpm dev:api\"",

    "api:lint": "bash apps/core/bin/lint.sh",
    "api:format": "bash apps/core/bin/format.sh",
    "api:typecheck": "bash apps/core/bin/typecheck.sh",
    "api:test": "bash apps/core/bin/test.sh",

    "build": "echo 'Build script needs to be defined'",
    "clean": "echo 'Clean script needs to be defined'"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^9.1.2",
    "npm-run-all": "^4.1.5"
  }
}