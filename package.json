{
  "name": "echo",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@echo/website",
    "dev:api": "turbo run dev --filter=@echo/api",
    "dev:full": "concurrently \"bun dev:api\" \"bun dev:web\" --names \"API,WEB\" --prefix-colors \"blue,green\"",
    "build": "turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "check": "turbo run check",
    "typecheck": "turbo run typecheck",
    "db:types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > packages/supabase/types/database.ts",
    "db:migrate": "supabase db push --project-id $SUPABASE_PROJECT_ID",
    "db:reset": "supabase db reset --project-id $SUPABASE_PROJECT_ID",
    "db:studio": "supabase studio --project-id $SUPABASE_PROJECT_ID",
    "setup": "bun install && echo 'Setup complete! Edit .env with your Supabase credentials, then run: bun dev'",
    "clean": "find . -name 'node_modules' -type d -exec rm -rf {} + 2>/dev/null || true && find . -name '.turbo' -type d -exec rm -rf {} + 2>/dev/null || true",
    "clean:cache": "rm -rf node_modules/.cache .turbo"
  },
  "dependencies": {
    "@biomejs/biome": "1.9.4",
    "@trpc/client": "^11.4.1",
    "@trpc/react-query": "^11.4.1",
    "@trpc/server": "^11.4.1",
    "turbo": "2.5.4"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "npm-run-all": "^4.1.5"
  },
  "packageManager": "bun@1.2.15"
}