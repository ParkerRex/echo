{
    "name": "@echo/core",
    "version": "1.0.0",
    "description": "Python API Core Service",
    "private": true,
      "scripts": {
    "dev": "cd ../.. && PYTHONPATH=$(pwd) uv run --directory apps/core uvicorn apps.core.main:app --reload --host 0.0.0.0 --port 8000",
    "build": "echo 'Python build: No build step required for FastAPI'",
    "start": "./bin/start.sh",
    "test": "uv run python -m pytest",
    "lint": "uv run ruff check .",
    "format": "uv run ruff format .",
    "typecheck": "uv run mypy .",
    "check": "pnpm lint && pnpm typecheck",
    "clean": "find . -type d -name '__pycache__' -exec rm -rf {} + 2>/dev/null || true",
    "gen:types": "uv run python bin/generate_api_types.py",
    "db:push": "cd ../../packages/supabase && supabase db push",
    "db:reset": "cd ../../packages/supabase && supabase db reset"
  },
    "keywords": [
      "python",
      "api",
      "fastapi"
    ],
    "author": "",
    "license": "ISC"
  }