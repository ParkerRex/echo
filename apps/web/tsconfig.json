{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../supabase/**/*.ts"
  ],
  "exclude": [
    "**/*.test.tsx",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./app/*"
      ],
      "@echo/db": [
        "../../packages/supabase"
      ],
      "@echo/db/*": [
        "../../packages/supabase/*"
      ],
      "@echo/types": [
        "../../packages/types/src"
      ],
      "@echo/types/*": [
        "../../packages/types/src/*"
      ]
    }
  }
}