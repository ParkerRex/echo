{
  "name": "@echo/types",
  "version": "1.0.0",
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./database": "./src/database.ts",
    "./api": "./src/api.ts",
    "./shared": "./src/shared.ts"
  },
  "scripts": {
    "build": "echo 'No build step required for types package'",
    "dev": "echo 'No dev step required for types package'",
    "test": "echo 'No tests configured yet'",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo",
    "gen:database": "cd ../supabase && supabase gen types typescript --local > ../types/src/database-generated.ts",
    "gen:api": "node generators/api-adapters.js",
    "gen:all": "pnpm gen:database && pnpm gen:api",
    "sync:database": "echo 'Database types are automatically synced from packages/supabase/types/database.ts'"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4"
  },
  "devDependencies": {
    "typescript": "^5.5.3",
    "eslint": "^8.0.0"
  },
  "keywords": ["types", "typescript", "shared"],
  "author": "",
  "license": "ISC",
  "description": "Shared TypeScript types for Echo monorepo"
}
